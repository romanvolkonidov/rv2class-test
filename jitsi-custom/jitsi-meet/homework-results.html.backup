<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#1E1E1E" />
    
    <title>–†–µ–∑—É–ª—å—Ç–∞—Ç—ã - RV2Class</title>
    
    <link rel="stylesheet" href="css/all.css" />
    
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', sans-serif;
            background: #1E1E1E;
            color: #E7E7E7;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }
        .results-container {
            max-width: 600px;
            width: 100%;
            padding: 40px 20px;
            text-align: center;
        }
        .results-card {
            background: #292929;
            border-radius: 12px;
            padding: 48px 32px;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.3);
        }
        .success-icon {
            font-size: 64px;
            margin-bottom: 24px;
        }
        h1 {
            color: #E7E7E7;
            font-size: 32px;
            margin-bottom: 16px;
        }
        .score {
            font-size: 72px;
            font-weight: 700;
            margin: 24px 0;
        }
        .score.excellent {
            color: #10B981;
        }
        .score.good {
            color: #3D7CC9;
        }
        .score.fair {
            color: #F59E0B;
        }
        .score.poor {
            color: #EF4444;
        }
        .message {
            color: #A4B5B8;
            font-size: 18px;
            margin-bottom: 32px;
        }
        .actions {
            display: flex;
            gap: 16px;
            justify-content: center;
            flex-wrap: wrap;
        }
        .btn {
            padding: 14px 28px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
        }
        .btn-primary {
            background: #3D7CC9;
            color: white;
        }
        .btn-primary:hover {
            background: #2E5FA3;
            transform: translateY(-2px);
        }
        .btn-secondary {
            background: #374151;
            color: white;
        }
        .btn-secondary:hover {
            background: #4B5563;
        }
    </style>
</head>
<body>
    <div class="results-container">
        <div class="results-card">
            <div class="success-icon">üéâ</div>
            <h1>–ó–∞–¥–∞–Ω–∏–µ –≤—ã–ø–æ–ª–Ω–µ–Ω–æ!</h1>
            <div class="score excellent" id="score">--</div>
            <div class="message" id="message">–û—Ç–ª–∏—á–Ω–∞—è —Ä–∞–±–æ—Ç–∞!</div>
            <div class="actions">
                <button class="btn btn-primary" id="backBtn">
                    –ù–∞–∑–∞–¥ –∫ –∑–∞–¥–∞–Ω–∏—è–º
                </button>
                <button class="btn btn-secondary" id="welcomeBtn">
                    –ù–∞ –≥–ª–∞–≤–Ω—É—é
                </button>
            </div>
        </div>
    </div>

    <script>
        // Get parameters from URL
        const params = new URLSearchParams(window.location.search);
        const score = parseInt(params.get('score') || '0');
        const studentId = params.get('student') || params.get('studentId');
        const homeworkId = params.get('homework');

        // Display score
        const scoreEl = document.getElementById('score');
        const messageEl = document.getElementById('message');
        
        scoreEl.textContent = score + '%';
        
        // Set color and message based on score
        scoreEl.classList.remove('excellent', 'good', 'fair', 'poor');
        if (score >= 90) {
            scoreEl.classList.add('excellent');
            messageEl.textContent = '–ü—Ä–µ–≤–æ—Å—Ö–æ–¥–Ω–æ! –í—ã –æ—Ç–ª–∏—á–Ω–æ —Å–ø—Ä–∞–≤–∏–ª–∏—Å—å!';
        } else if (score >= 70) {
            scoreEl.classList.add('good');
            messageEl.textContent = '–•–æ—Ä–æ—à–∞—è —Ä–∞–±–æ—Ç–∞! –ü—Ä–æ–¥–æ–ª–∂–∞–π—Ç–µ –≤ —Ç–æ–º –∂–µ –¥—É—Ö–µ!';
        } else if (score >= 50) {
            scoreEl.classList.add('fair');
            messageEl.textContent = '–ù–µ–ø–ª–æ—Ö–æ! –ï—Å—Ç—å –Ω–∞–¥ —á–µ–º –ø–æ—Ä–∞–±–æ—Ç–∞—Ç—å.';
        } else {
            scoreEl.classList.add('poor');
            messageEl.textContent = '–ù—É–∂–Ω–æ –±–æ–ª—å—à–µ –ø—Ä–∞–∫—Ç–∏–∫–∏. –ù–µ —Å–¥–∞–≤–∞–π—Ç–µ—Å—å!';
        }

        // Setup buttons
        document.getElementById('backBtn').addEventListener('click', () => {
            if (studentId) {
                window.location.href = `/student-homework.html?student=${encodeURIComponent(studentId)}`;
            } else {
                window.location.href = '/';
            }
        });

        document.getElementById('welcomeBtn').addEventListener('click', () => {
            if (studentId) {
                window.location.href = `/student-welcome.html?student=${encodeURIComponent(studentId)}`;
            } else {
                window.location.href = '/';
            }
        });
    </script>
</body>
</html>
