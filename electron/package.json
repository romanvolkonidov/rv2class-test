{
  "name": "rv2class-electron",
  "version": "1.0.0",
  "description": "Electron desktop app for RV2Class - Professional English tutoring platform",
  "main": "main.js",
  "homepage": "https://rv2class.com",
  "author": {
    "name": "RV2Class",
    "email": "info@rv2class.com"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --windows --x64",
    "build:portable": "electron-builder --windows portable",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --windows --linux",
    "build:dir": "electron-builder --windows --x64 --dir",
    "pack": "electron-builder --dir"
  },
  "keywords": ["education", "tutoring", "video", "livekit"],
  "license": "ISC",
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.rv2class.app",
    "productName": "RV2Class",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": ["deb"],
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
